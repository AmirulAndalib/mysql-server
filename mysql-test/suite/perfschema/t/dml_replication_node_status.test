# This test verifies the correct behaviour in case of invalid
# usage of DMLs on the table replication_node_status

--source include/not_embedded.inc
--source include/have_perfschema.inc

SELECT * FROM performance_schema.replication_node_status
  LIMIT 1;

SELECT * FROM performance_schema.replication_node_status
  WHERE group_name='FOO';

--error ER_TABLEACCESS_DENIED_ERROR
INSERT INTO performance_schema.replication_node_status
  SET group_name='FOO', node_id=1;

--error ER_TABLEACCESS_DENIED_ERROR
UPDATE performance_schema.replication_node_status
  SET node_id=12;

--error ER_TABLEACCESS_DENIED_ERROR
UPDATE performance_schema.replication_node_status
  SET node_id=12 WHERE group_name LIKE "FOO";

--error ER_TABLEACCESS_DENIED_ERROR
DELETE FROM performance_schema.replication_node_status
  WHERE node_id=1;

--error ER_TABLEACCESS_DENIED_ERROR
DELETE FROM performance_schema.replication_node_status;

--error ER_TABLEACCESS_DENIED_ERROR
LOCK TABLES performance_schema.replication_node_status READ;
UNLOCK TABLES;

--error ER_TABLEACCESS_DENIED_ERROR
LOCK TABLES performance_schema.replication_node_status WRITE;
UNLOCK TABLES;
