--connection server1
--source include/install_gcs_replication.inc
set @@session.sql_log_bin=off;
call mtr.add_suppression("could not form the cluster");
call mtr.add_suppression("re-joins the cluster, distributed recovery must follow");
set @@session.sql_log_bin=on;

SET GLOBAL gcs_replication_plugin_group_name= "8a94f357-aab4-11df-86ab-c80aa9429562";
START GCS_REPLICATION;

--connection server2
--source include/install_gcs_replication.inc
set @@session.sql_log_bin=off;
call mtr.add_suppression("could not form the cluster");
call mtr.add_suppression("re-joins the cluster, distributed recovery must follow");
set @@session.sql_log_bin=on;
SET GLOBAL gcs_replication_plugin_group_name= "8a94f357-aab4-11df-86ab-c80aa9429562";
START GCS_REPLICATION;

--echo sleeping for view with 2 nodes
--sleep 5

--connection server1
CREATE TABLE t1 (c1 INT NOT NULL PRIMARY KEY) ENGINE=InnoDB;

--connection server2
CREATE TABLE t2 (c1 INT NOT NULL PRIMARY KEY) ENGINE=InnoDB;

--connection server1
BEGIN;
INSERT INTO t1 VALUES (1);
INSERT INTO t2 VALUES (2);
COMMIT;

INSERT INTO t1 VALUES (3);

BEGIN;
INSERT INTO t1 VALUES (4);
ROLLBACK;

BEGIN;
INSERT INTO t1 VALUES (5);
INSERT INTO t1 VALUES (6);
COMMIT;

CREATE TEMPORARY TABLE t3 (c1 INT NOT NULL PRIMARY KEY) ENGINE=InnoDB;

--connection server2
INSERT INTO t1 VALUES (1000);

--echo sleeping
--sleep 10
--connection server1
--echo
--echo server1

SELECT @@GLOBAL.GTID_EXECUTED;
SHOW TABLES FROM test;

--connection server2
--echo
--echo server2
SELECT @@GLOBAL.GTID_EXECUTED;
SHOW TABLES FROM test;
--let  $diff_tables= server1:test.t1, server2:test.t1
--source include/diff_tables.inc
--let  $diff_tables= server1:test.t2, server2:test.t2
--source include/diff_tables.inc
--echo

--connection server1
DROP TABLE t1, t2, t3;
--sleep 2

STOP GCS_REPLICATION;
--source include/uninstall_gcs_replication.inc

--connection server2
STOP GCS_REPLICATION;

