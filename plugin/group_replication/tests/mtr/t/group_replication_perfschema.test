--let $assert_text= 'There is a Group Replication applier chanel on performance_schema.replication_applier_configuration table'
--let $assert_cond= [SELECT COUNT(*) AS count FROM performance_schema.replication_applier_configuration WHERE channel_name = "group_replication_applier", count, 1] = 1
