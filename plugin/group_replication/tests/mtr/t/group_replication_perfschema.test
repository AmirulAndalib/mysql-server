--source include/assert.inc

--let $assert_text= 'There is a Group Replication applier chanel on performance_schema.replication_applier_status_by_coordinator table'
--let $assert_cond= [SELECT COUNT(*) AS count FROM performance_schema.replication_applier_status_by_coordinator WHERE channel_name = "group_replication_applier", count, 1] = 1
--source include/assert.inc

# Group Replication does not have parallel applier.
--let $assert_text= 'There is no Group Replication applier chanel on performance_schema.replication_applier_status_by_worker table'
--let $assert_cond= [SELECT COUNT(*) AS count FROM performance_schema.replication_applier_status_by_worker WHERE channel_name = "group_replication_applier", count, 1] = 0
--source include/assert.inc


--echo
--echo ############################################################
--echo # 3. Group Replication running channels sample output
--echo #    on common replication P_S tables.
--connection server2
# Execute some transactions on server2 to make server1
# performance_schema.replication_connection_status.RECEIVED_TRANSACTION_SET
# not empty.
CREATE TABLE t1 (c1 INT NOT NULL PRIMARY KEY) ENGINE=InnoDB;
INSERT INTO t1 VALUES (1);
--source include/rpl_sync.inc

--connection server1

