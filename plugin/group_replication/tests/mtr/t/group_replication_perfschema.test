#
# Validate that Group Replication channels are listed on all
# replication P_S tables.
#

--source include/have_group_replication_plugin.inc
--let $group_replication_group_name= 8a94f357-aab4-11df-86ab-c80aa9429444
--let $rpl_skip_group_replication_start= 1
--source include/master-slave.inc


--echo
--echo ############################################################
--echo # 1. Before start Group Replication channels are not present
--echo #    on common replication P_S tables.
--connection server1
--let $assert_text= 'There is no Group Replication applier chanel on performance_schema.replication_connection_configuration table'
--let $assert_cond= [SELECT COUNT(*) AS count FROM performance_schema.replication_connection_configuration WHERE channel_name = "group_replication_applier", count, 1] = 0
--source include/assert.inc

--let $assert_text= 'There is no Group Replication applier chanel on performance_schema.replication_connection_status table'
--let $assert_cond= [SELECT COUNT(*) AS count FROM performance_schema.replication_connection_status WHERE channel_name = "group_replication_applier", count, 1] = 0
--source include/assert.inc

--let $assert_text= 'There is no Group Replication applier chanel on performance_schema.replication_applier_configuration table'
--let $assert_cond= [SELECT COUNT(*) AS count FROM performance_schema.replication_applier_configuration WHERE channel_name = "group_replication_applier", count, 1] = 0
--source include/assert.inc

--let $assert_text= 'There is no Group Replication applier chanel on performance_schema.replication_applier_status table'
--let $assert_cond= [SELECT COUNT(*) AS count FROM performance_schema.replication_applier_status WHERE channel_name = "group_replication_applier", count, 1] = 0
--source include/assert.inc

--let $assert_text= 'There is no Group Replication applier chanel on performance_schema.replication_applier_status_by_coordinator table'
--let $assert_cond= [SELECT COUNT(*) AS count FROM performance_schema.replication_applier_status_by_coordinator WHERE channel_name = "group_replication_applier", count, 1] = 0
--source include/assert.inc

--let $assert_text= 'There is no Group Replication applier chanel on performance_schema.replication_applier_status_by_worker table'
