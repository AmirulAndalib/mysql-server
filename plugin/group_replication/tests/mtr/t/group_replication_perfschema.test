--source include/assert.inc


--echo
--echo ############################################################
--echo # 2. Aftert start Group Replication channels are present
--echo #    on common replication P_S tables.
--connection server2
--source include/start_group_replication.inc
--connection server1
--source include/start_group_replication.inc

--let $assert_text= 'There is a Group Replication applier chanel on performance_schema.replication_connection_configuration table'
--let $assert_cond= [SELECT COUNT(*) AS count FROM performance_schema.replication_connection_configuration WHERE channel_name = "group_replication_applier", count, 1] = 1
--source include/assert.inc

--let $assert_text= 'There is a Group Replication applier chanel on performance_schema.replication_connection_status table'
--let $assert_cond= [SELECT COUNT(*) AS count FROM performance_schema.replication_connection_status WHERE channel_name = "group_replication_applier", count, 1] = 1
--source include/assert.inc

--let $assert_text= 'There is a Group Replication applier chanel on performance_schema.replication_applier_configuration table'
